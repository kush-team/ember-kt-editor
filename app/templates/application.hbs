{{#if session.isAuthenticated}}

	<div {{bind-attr class=":sidebar isShowMenu:show"}}>


		<div class="user">
			<a href="/">
			<img class="ui tiny circular image" src="http://semantic-ui.com/images/wireframe/square-image.png">	
			</a>
			<h2 class="ui sub header">{{session.user.name}} {{session.user.lastName}}</h2>
			<i>editor</i>
			{{link-to "Crear informe" "reports.new" classNames="positive ui fluid button"}}
		</div>

		<div class="ui inverted vertical menu">
			
			{{#link-to 'index' class="item"}}
				{{fa-icon 'list' class="icon"}}
				Todos los informes
			{{/link-to}}
			{{#link-to 'unpublish' class="item"}}
				{{fa-icon 'floppy-o' class="icon"}}
				No publicados
			{{/link-to}}
			<a {{ action 'invalidateSession' }} class="item">
				{{fa-icon "sign-out" class="icon"}}
				Cerrar sesi√≥n
			</a>	
		</div>
		
	</div>

	<div class="main-menu">
		<div class="ui menu" style="margin: 0">
			<div class="item offcanvas">
				{{t-menu a="typo"  action="toggleMenu"}}
			</div>
		</div>
	</div>


	<div class="main-container">

		{{outlet}}

	</div>

{{else}}

	<div class="login">

		{{outlet}}

	</div>

{{/if}}

