<section>

  <h2 class="ui dividing header">
    Todos los informes
  </h2>

  <div class="section-content reports">
        <div class="ui divided very relaxed items">
       {{#each report in model}}
      <div class="item">
        <div class="image">
          <img src="{{report.picture.url}}">
        </div>
        <div class="content">
          <div class="header">{{report.title}}</div>
          <div class="meta">
            {{#if report.published}}
              <div class="ui blue label tiny ">Publicado</div>
            {{else}}
              <div class="ui grey label tiny ">Sin publicar</div>
            {{/if}}
            <span>{{time-ago-in-words report.createdAt}}</span>
          </div>
          <div class="description">
            <p>{{report.excerpt}}</p>
          </div>
          <div class="extra">
            {{#link-to "reports.edit" report classNames="ui icon button circular inverted small green" title="Editar"}}
               <i class="write icon"></i>
            {{/link-to}}
            <div class="ui icon button circular inverted small red" title="Eliminar" {{action "remove" report}}>
              <i class="trash icon"></i>
            </div>
          </div>
        </div>
      </div>
       {{/each}}
    </div>
  </div>
</section>
